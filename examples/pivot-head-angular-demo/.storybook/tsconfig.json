{
  "extends": "../tsconfig.app.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "allowJs": true,
    "baseUrl": "../../../",
    "paths": {
      "@mindfiredigital/pivothead-web-component": [
        "packages/web-component/src/*"
      ],
      "@mindfiredigital/pivothead-angular": ["packages/angular/src/*"],
      "@mindfiredigital/pivothead": ["packages/core/src/*"]
    }
  },
  "exclude": [
    "../src/test.ts",
    "../src/**/*.spec.ts",
    "../projects/**/*.spec.ts"
  ],
  "include": [
    "../src/**/*",
    "../../../packages/angular/src/lib/*",
    "./*.ts",
    "./preview.ts"
  ]
}
