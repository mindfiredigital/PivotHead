{
  "compilerOptions": {
    // --- Fixes for Storybook/Webpack/Node dependencies ---
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],

    // --- Standard Angular options ---
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,

    // --- Path mapping for the monorepo library ---
    "baseUrl": ".",
    "paths": {
      "@mindfiredigital/pivothead-angular": [
        "../../packages/angular/src/public-api.ts"
      ],
      "@mindfiredigital/pivothead-angular/*": ["../../packages/angular/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../packages/angular/src/lib/**/*.stories.ts",
    ".storybook/**/*.ts"
  ],
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
