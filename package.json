{
  "name": "@mindfiredigital/pivothead-table",
  "description": "PivotHead is a headless, powerful and flexible library for creating interactive pivot tables in JavaScript applications. It provides a core engine build using typescript for data manipulation.",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "author": "Mindfiredigital",
  "license": "MIT",
  "keywords": [
    "pivothead-core",
    "pivot",
    "pivotTablepivot",
    "table",
    "spreadsheet",
    "javascript",
    "typescript",
    "data-drill-down",
    "data-analysis",
    "data-visualization",
    "dynamic-table",
    "data-aggregation",
    "data-grid",
    "interactive-reports",
    "data-exploration",
    "olap",
    "data-pivoting",
    "data-summarization",
    "react-pivot",
    "business-intelligence",
    "analytics-tool"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "changeset:autogenerate": "node .github/changeset-autogenerate.mjs",
    "release": "changeset publish",
    "e2e": "pnpm --filter pivothead-e2e run test:react-demo",
    "e2e:open": "pnpm --filter pivothead-e2e run test:open:react-demo",
    "e2e:simple-js-demo": "pnpm --filter pivothead-e2e run test:simple-js-demo",
    "e2e:open:simple-js-demo": "pnpm --filter pivothead-e2e run test:open:simple-js-demo",
    "e2e:pivothead-default": "pnpm --filter pivothead-e2e run test:pivothead-default",
    "e2e:pivothead-minimal": "pnpm --filter pivothead-e2e run test:pivothead-minimal",
    "e2e:open:pivothead-minimal": "pnpm --filter pivothead-e2e run test:open:pivothead-minimal",
    "e2e:pivothead-none": "pnpm --filter pivothead-e2e run test:pivothead-none",
    "e2e:open:pivothead-none": "pnpm --filter pivothead-e2e run test:open:pivothead-none",
    "e2e:all": "pnpm --filter pivothead-e2e run test:react-demo && pnpm --filter pivothead-e2e run test:simple-js-demo && pnpm --filter pivothead-e2e run test:pivothead-default && pnpm --filter pivothead-e2e run test:pivothead-minimal && pnpm --filter pivothead-e2e run test:pivothead-none"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.9",
    "ng-packagr": "^17.3.0",
    "turbo": "^2.3.3",
    "typescript": "5.4.5"
  },
  "pnpm": {
    "overrides": {
      "typescript": "5.4.5"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}
