{
  "name": "@mindfiredigital/pivothead-table",
  "description": "PivotHead is a headless, powerful and flexible library for creating interactive pivot tables in JavaScript applications. It provides a core engine build using typescript for data manipulation.",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "author": "Mindfiredigital",
  "license": "MIT",
  "keywords": [
    "pivothead-core",
    "pivot",
    "pivotTablepivot",
    "table",
    "spreadsheet",
    "javascript",
    "typescript",
    "data-drill-down",
    "data-analysis",
    "data-visualization",
    "dynamic-table",
    "data-aggregation",
    "data-grid",
    "interactive-reports",
    "data-exploration",
    "olap",
    "data-pivoting",
    "data-summarization",
    "react-pivot",
    "business-intelligence",
    "analytics-tool"
  ],
  "scripts": {
    "build": "turbo run lint && turbo run build --filter=@mindfiredigital/pivot-head-core...",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "changeset:autogenerate": "node .github/changeset-autogenerate.mjs",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.9",
    "turbo": "^2.3.3"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}
