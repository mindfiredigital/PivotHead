{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "types": ["react", "react-dom", "vitest"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"]
}
