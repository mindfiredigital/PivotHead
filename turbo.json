{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": ["dist/**"]
    },
    "@mindfiredigital/pivothead-angular#build": {
      "dependsOn": ["^build"],
      "outputs": ["../../dist/angular/**"]
    },

    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "e2e": {
      "cache": false,
      "dependsOn": [],
      "outputs": []
    }
  }
}
